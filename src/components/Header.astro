---

<header class="header">
  <div class="container">
    <nav>
      <!-- <a href="#hero" class="logo">
        <img src={whiteLogo.src} alt="Pixeleado" />
      </a> -->
      <a href="#hero" class="logo">
        INGENIERIA EN ENERGIA
      </a>
      
      <!-- Botón hamburguesa para móviles -->
      <button class="menu-toggle"> ☰ </button>

      <!-- Menú de navegación -->
      <ul class="nav-links">
        {
          menuItems.map((item) => (
            <li class={`nav-item ${item.submenu ? "dropdown" : ""}`}>
              <a href={item.link} class="nav-link">
                {item.name}
              </a>
              {item.submenu && (
                <ul class="submenu">
                  {item.submenu.map((subitem) => (
                    <li>
                      <a href={subitem.link}>{subitem.name}</a>
                    </li>
                  ))}
                </ul>
              )}
            </li>
          ))
        }
      </ul>

      <!-- Botón de inicio de sesión -->
      <!-- <a href="" class="btn-cta">LOG IN</a> -->

    </nav>
  </div>
</header>



<style>
  /* Estilos base */
  .header {
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(10px);
    padding: 10px 20px;
    background: rgba(8, 1, 14, 0);
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 20px;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 70px;
    
  }
  .logo {
    font-size: 1rem;
    font-weight: normal; /* Allerta Stencil ya es bold por diseño */
    color: black;
    text-decoration: none;
    font-family: 'Allerta Stencil', sans-serif;
    letter-spacing: 2px;
}

  /* Logo */
  /* .logo img {
    height: 50px;
  } */

  /* Menú de navegación */
  .nav-links {
    display: flex;
    gap: 1.5rem;
    list-style: none;
  }

  .nav-links li {
    position: relative;
  }

  .nav-links li a {
    color: #0c0c0c; /* Force white color always in mobile */
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }


  .nav-links li a:hover {
    color: rgb(55, 155, 205);
  }

  /* Submenú */
  .submenu {
    width: 100%;
    display: none;
    position: absolute;
    top: 100%; /* Aumentamos el valor para que se muestre más abajo */
    left: 0;
    background-color: rgba(184, 182, 182, 0.067); /* Fondo con transparencia */
    list-style: none;
    padding: 0;
    border: 1px solid #ccc;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    border-radius: 5px; /* Agregamos un borde redondeado para mayor suavidad */
  }

  .submenu li a {
    display: block;
    padding: 10px 20px;
    color: white; /* Color de texto blanco para mejor contraste con el fondo oscuro */
    text-decoration: none;
    /* transition: background-color 0.3s ease; */
  }

  .submenu li a:hover {
    /* background-color: var(--color-primary); */
    background-color: rgba(167, 198, 255, 0.884);
    color: #ffffff;
    transition: background-color 0.3s ease-in-out;
    border-radius: 5px; /* Agregamos un borde redondeado para mayor suavidad */
  }

  .nav-item:hover .submenu {
    display: block;
  }

  /* Botón de menú hamburguesa */
  .menu-toggle {
    display: none;
    font-size: 24px;
    background: none;
    border: none;
    color: white;
    cursor: pointer;
  }

  .btn-cta {
    background-color: #404a4f;
    padding: 0.7rem 1.2rem;
    border-radius: 8px;
    font-weight: 100;
    text-decoration: none;
    color: white;
    transition:
      background-color 0.3s ease,
      transform 0.2s ease-in-out;
    border: 1px solid white;
  }

  .btn-cta:hover {
    background-color: #4f5c62;
    transform: scale(1.05);
  }

  @media (max-width: 768px) {
    .menu-toggle {
      display: block;
      /* color: #000; */
      color: #ffffff;
    }

    .nav-links {
      display: none;
      flex-direction: column;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: #000;
      align-items: center;
      justify-content: center;
      gap: 2rem;
      z-index: 99;
    }

    .nav-links.open {
      display: flex;
    }

    .nav-links li a {
      color: #ffffff;
      font-size: 1.2rem;
      text-transform: uppercase;
    }

    .btn-cta {
      display: none;
    }

    .nav-links .btn-cta {
      display: block;
      width: 80%;
      text-align: center;
      margin-top: 1rem;
      background-color: #404a4f;
      border: 1px solid white;
      border-radius: 8px;
      padding: 0.7rem 1.2rem;
    }

    .search-container {
      display: none;
    }
  }
  /* Modo texto + logo claros (para fondo oscuro) */
  .header-light {
    color: #fff;
  }
  .header-light a {
    color: #fff !important;
  }
  .header-light .btn-cta {
    color: #fff !important;
    border-color: #fff !important;
  }

  /* Modo texto + logo oscuros (para fondo claro) */
  .header-dark {
    color: #000;
  }
  .header-dark a {
    color: #000 !important;
  }
  .header-dark .btn-cta {
    color: #fff !important;
    border-color: #000 !important;
  }
  @media (max-width: 768px) {
    .nav-links {
      display: none;
      flex-direction: column;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      margin: 0;
      padding: 15vh 2rem 2rem 2rem;
      background: #000000;
      align-items: flex-start;
      justify-content: flex-start;
      gap: 2rem;
      z-index: 999;
    }

    .header {
      background: transparent;
      padding: 0.5rem 1rem;
    }

    .container {
      padding: 0 1rem;
    }

    nav {
      padding-right: 1rem; /* Added padding to nav */
    }

    .menu-toggle {
      display: block;
      color: #ffffff; /* Changed to white */
      z-index: 1000;
      position: relative;
      font-size: 28px; /* Made slightly bigger */
      margin-right: 0.5rem; /* Added margin to the right */
    }
    .nav-links {
      display: none;
      flex-direction: column;
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: #000000;
      align-items: center;
      justify-content: flex-start;
      padding-top: 20vh;
      gap: 2rem;
      z-index: 999;
    }

    .nav-links.open {
      display: flex;
    }

    .nav-links li {
      text-align: center;
      width: 100%;
    }

    .nav-links li a {
      color: #ffffff !important; /* Force white color for X button */
      font-size: 1.3rem;
      text-transform: uppercase;
      letter-spacing: 2px;
      display: block;
      padding: 0.5rem 0;
      text-align: left;
    }
    .menu-toggle.is-open {
      color: #ffffff !important; /* Force white color for X button */
    }
    .submenu {
      position: static;
      background: transparent;
      border: none;
      box-shadow: none;
      margin-top: 0.5rem;
    }
    .submenu.show {
      display: block;
    }
    .submenu li a {
      font-size: 1.2rem;
      color: #ffffff;
      padding: 0.3rem 0;
    }

    .search-container {
      display: none;
    }

    .btn-cta {
      display: none;
    }

    /* Add login button inside mobile menu */
    .nav-links .btn-cta {
      display: block;
      margin-top: 2rem;
      font-size: 1.2rem;
      padding: 1rem 2rem;
      background: transparent;
      border: 2px solid white;
      width: auto;
    }
  }
</style>

<!-- Script para modo movil -->
<script>
  const menuToggle = document.querySelector('.menu-toggle');
  const navLinks = document.querySelector('.nav-links');
  
  // Handle mobile menu toggle
menuToggle?.addEventListener('click', () => {
    navLinks?.classList.toggle('open');
    if (menuToggle instanceof HTMLElement) {
      menuToggle.textContent = navLinks?.classList.contains('open') ? '✕' : '☰';
      menuToggle.classList.toggle('is-open'); // Add class when X is showing
    }
  });
  
  // In the close menu function


  // Handle submenu clicks
  const dropdowns = document.querySelectorAll('.dropdown > a');
  dropdowns.forEach(dropdown => {
    dropdown.addEventListener('click', (e) => {
      e.preventDefault();
      const submenu = dropdown.nextElementSibling;
      if (submenu) {
        submenu.classList.toggle('show');
      }
    });
  });

  // Close menu when clicking a submenu link
  const submenuLinks = document.querySelectorAll('.submenu a');
  submenuLinks.forEach(link => {
    link.addEventListener('click', () => {
      navLinks?.classList.remove('open');
      if (menuToggle instanceof HTMLElement) {
        menuToggle.textContent = '☰';
        menuToggle.classList.remove('is-open'); // Remove class when returning to hamburger
      }
    });
  });
</script>