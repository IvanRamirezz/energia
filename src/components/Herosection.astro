<!-- Sección de estilos -->
<style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap');

    body {
        margin: 0;
        font-family: 'Roboto', sans-serif;
    }

    .product-showcase {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        padding: 0 5%;
        min-height: 100vh;
        background-image: url("../../public/images/fondo1.png");
        background-size: cover;
        background-position: center;
        position: relative;
        color: #3b4f2b;
        text-align: right;
    }

    .content {
        max-width: 600px;
    }

    .content h1 {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .content p {
        font-size: 1.5rem;
        margin-bottom: 2rem;
    }

    .cta-button {
        background-color: #3b4f2b;
        color: white;
        padding: 12px 32px;
        border: none;
        border-radius: 25px;
        font-size: 1rem;
        cursor: pointer;
        transition: background 0.3s ease;
        text-transform: uppercase;
    }

    .cta-button:hover {
        background-color: #2e3d21;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .product-showcase {
            flex-direction: column;
            justify-content: center;
            text-align: center;
            padding: 40px 20px;
        }

        .content h1 {
            font-size: 2rem;
        }

        .content p {
            font-size: 1rem;
        }
    }
</style>

<!-- Sección HTML -->
<section class="product-showcase" id="hero">
    <div class="content">
        <h1>DESCUBRE TODO TIPO DE GENERACIÓN ELÉCTRICA Y EL MUNDO QUE LAS RODEA</h1>
        <button class="cta-button">DESCUBRE</button>
    </div>
</section>
