<!-- Sección de estilos -->
<style>

    .product-showcase {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        padding: 0 5%;
        min-height: 100vh;
        background-image: url("../../public/images/fondo1.png");
        background-size: cover;
        background-position: center;
        position: relative;
        color: #3b4f2b;
        text-align: center;
        font-family: 'Allerta Stencil', sans-serif;
    }

    .content {
        max-width: 50%;
    }

    .content h1 {
        font-size: 2.7rem;
        font-weight: bold;
        margin-bottom: 2rem;
        line-height: 1.3;
    }

    .content p {
        font-size: 1.5rem;
        margin-bottom: 2rem;
    }

    .cta-button {
        background-color: #3b4f2b;
        color: white;
        padding: 12px 32px;
        border: none;
        border-radius: 25px;
        font-size: 1.2rem;
        cursor: pointer;
        transition: background 0.3s ease;
        text-transform: uppercase;
        font-family: 'Allerta Stencil', sans-serif;
    }

    .cta-button:hover {
        background-color: #2e3d21;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .product-showcase {
            flex-direction: column;
            justify-content: center;
            text-align: left;
            padding: 40px 20px;
            min-height: 100vh;
        }
        .content {
        max-width: 90%;
        padding-bottom: 70%;
        }

        .content h1 {
            font-size: 2rem;
            /* margin-bottom: 5rem; */
            line-height: 1.2;
        }

        .content p {
            font-size: 1rem;
        }

        .content {
        display: flex;
        flex-direction: column;
        align-items: flex-start; /* texto a la izquierda */
        }

        .cta-button {
        /* background-color: black; */
        font-size: 1rem;
        margin-left: auto; /* esto lo empuja a la derecha */
        margin-right: 0;   /* asegúrate que no tenga margen extra */
        }
        
    }
</style>

<!-- Sección HTML -->
<section class="product-showcase" id="hero">
    <div class="content">
        <h1>DESCUBRE TODO TIPO DE GENERACIÓN ELÉCTRICA Y EL MUNDO QUE LAS RODEA</h1>
        <button class="cta-button">DESCUBRE</button>
    </div>
</section>
